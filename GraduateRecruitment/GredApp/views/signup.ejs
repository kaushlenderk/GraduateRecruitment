<div class="container"> 
	<div class="row">
		<div class="col-md-12">
			<div style="text-align: center;">
				<a href="/"><img src="/images/MUN_Logo_RGB.png" alt="Logo" /></a>
			</div>			
		</div>
	</div> 
</div> 
<div class="container"> 
	<div class="row">
		<div class="col-md-12">
			<div style="text-align: center;">
				<h2>MUN Create Account</h2>
			</div>			
		</div>
	</div> 
</div>  
	 
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog"> 
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">New User Registration Details</h4>
        </div>
        <div class="modal-body">
          <p style="font-weight:bold;">Use this user id for your future login:</p>
          <p id="newUserId"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
 </div>
  
<div class="image-container set-full-height" style="min-height: 0vh;"> 
    <div class="container">
        <div class="row">
	        <div class="col-sm-2"></div>
	        <div class="col-sm-8">
	            <div class="wizard-container" style="padding-top: 40px;">
	                <div class="card wizard-card" style="min-height:0px;" data-color="green" id="wizard">
	                <form role="form" id="registeruserform">  
	                     <div class="row">
	                         <div class="col-sm-10 col-sm-offset-1">
	                              <div id="alertMessage" class="alert_message"></div>									
	                         </div>                                  
	                         <div class="col-sm-5 col-sm-offset-1">
	                             <div class="form-group">
	                                 <label>First Name &nbsp;<span class="required">*</span></label>
	                             </div>
	                             <div class="form-group"> 
	                                 <input type="text" class="form-control" id="firstName" placeholder="First Name">
	                             </div>
	                             <div class="form-group">
	                                 <label id="E1" class="text-danger hide_error">Required field</label>
	                             </div>
	                         </div>
	                         <div class="col-sm-5">
	                               <div class="form-group">
	                                    <label>Last Name &nbsp;<span class="required">*</span></label>
	                               </div>
	                               <div class="form-group">
	                                    <input type="text" class="form-control" id="lastName" placeholder="Last Name">
	                               </div>
	                               <div class="form-group">
	                                    <label id="E2" class="text-danger hide_error">Required field</label>
	                               </div>
	                          </div>  
	                          <div class="col-sm-12">
	                              &nbsp;									
	                         </div>    
	                         <div class="col-sm-10 col-sm-offset-1">
	                               <div class="form-group">
	                                    <label>External Email Address &nbsp;<span class="required">*</span></label>
	                               </div>
	                               <div class="form-group">
	                                    <input type="text" class="form-control" id="email" placeholder="External Email Address">
	                               </div>
	                               <div class="form-group">
	                                    <label id="E3" class="text-danger hide_error">Required field</label>
	                                    <label id="E33" class="text-danger hide_error">Invalid email id format</label>
	                                    <label id="E333" class="text-danger hide_error"></label>
	                               </div>
	                          </div>
	                         <div class="col-sm-12">
	                              &nbsp;									
	                         </div> 
	                         <div class="col-sm-10 col-sm-offset-1">
	                             <div class="col-sm-4" style="padding-left: 0px;">
	                             	 <label class="checkbox-inline"><input type="checkbox" value="" id="isFaculty">Is Faculty</label>				
	                         	</div>	
	                         	 <div class="col-sm-6" style="width: 66%;padding-right: 0px;">
	                             	 <div class="form-group" id="divfacultyid" style="display:none;">
	                               		 <input type="text" class="form-control" id="facultyid" placeholder="Faculty Id">
	                               		 <label id="E5" class="text-danger hide_error">Required field</label>
	                               		 <label id="E55" class="text-danger hide_error"></label>
	                           		 </div>					
	                         	</div>						
	                         </div>   
	                         <div class="col-sm-12">
	                              &nbsp;									
	                         </div> 
	                         <div class="col-sm-10 col-sm-offset-1">
	                               <div class="form-group">
	                                    <label>Password &nbsp;<span class="required">*</span></label>
	                               </div>
	                               <div class="form-group">
	                                    <input type="password" class="form-control" id="password" placeholder="Password">
	                               </div>
	                               <div class="form-group">
	                                   <label id="E4" class="text-danger hide_error">Required field</label>
	                               </div>
	                          </div>
						      <div class="col-sm-10 col-sm-offset-1">
							 	 <div class="form-group info-text">                                        
	                                  <input type="submit" id="btnRegister" class='btn btn-fill btn-success btn-wd btn-sm info-text' style="min-width: 100%;"  name='Join Now'  value='Join Now'/>  <br/><span><a href="login" style="color: #000;float: right;">Login</a><span>
	                             </div>                                  						
	                           </div>
	                      </div>                        
	                    </form>
	                </div>
	            </div> 
	        </div>
	        <div class="col-sm-2"></div>
        </div>  
    </div>   
</div>
 
<div class="container" style="padding: 25px;"> 
	<div class="row">
		<div class="col-md-12">
			<div style="text-align: center;">
				&nbsp;
			</div>			
		</div>
	</div> 
</div> 

<nav class="navbar navbar-default">
	<div class="container">&nbsp;</div> 
</nav> 
