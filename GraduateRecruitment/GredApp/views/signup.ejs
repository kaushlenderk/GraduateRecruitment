            </div> 
        </section> 
		
</body>

	<!--   Core JS Files   --> 
	<script src="/js/jquery-2.2.4.min.js" type="text/javascript"></script>
	<script src="/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="/js/jquery.bootstrap.wizard.js" type="text/javascript"></script> 
	<script src="/js/gsdk-bootstrap-wizard.js"></script>
	<script src="/js/jquery.validate.min.js"></script>	
	<script src="/js/jsdata/user.js"></script>

	<script>
		$('#isFaculty').change(function() { 
			var x = document.getElementById("divfacultyid");
		    if (this.checked) {
		       x.style.display = "block";
		    } else {
		       x.style.display = "none";
		       $("#facultyid").val("");
		       
			   $("#E5").removeClass("show_error");
			   $("#E5").addClass("hide_error");
		    }
		});

		
		$('#firstName').on('change',function(e){
			if($("#firstName").val()!= null || $("#firstName").val()!= '')
			{ 
				$("#E1").removeClass("show_error");
				$("#E1").addClass("hide_error");
			}
		});
		
		$('#lastName').on('change',function(e){
			if($("#lastName").val()!= null || $("#lastName").val()!= '')
			{ 
				$("#E2").removeClass("show_error");
				$("#E2").addClass("hide_error");
			}
		});
		
		$('#email').on('change',function(e){
			if($("#email").val()!= null || $("#email").val()!= '')
			{ 
				$("#E3").removeClass("show_error");
				$("#E3").addClass("hide_error");
			} 
		});
		
		$('#password').on('change',function(e){
			if($("#password").val()!= null || $("#password").val()!= '')
			{ 
				$("#E4").removeClass("show_error");
				$("#E4").addClass("hide_error");
			}
		});
	</script>
	
	<script>
		setTimeout(function () {
			if ($('#alertMessage').length) {
				document.getElementById('alertMessage').style.opacity = 0;
			}
		}, 15000);
	</script>
</html>

