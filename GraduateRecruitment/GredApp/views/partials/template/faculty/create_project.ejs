	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<h4 class="form-section-title section_header">Filter Project</h4>
			<hr class="custom-hr hr_width">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <div class="form-group">
	             <div class="form-group">
	                <label for="description">Filter Project By Department</label>
	              </div>
                </div>
	        </div>
	        <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
	               <div class="form-group">
	                     <select class="form-control" name="department_filter_id" id="department_filter_id">
	                          <option value="-select-">-select-</option>
	                     </select>
	               </div>
                </div>
	         </div>
	         <div class="col-lg-6 col-md-6 col-sm-6">
              <div class="form-group">
	             <div class="form-group">
	                <label for="description">Create New Project</label>
	              </div>
                </div>
	        </div>
	        <div class="col-lg-6 col-md-6 col-sm-6">
