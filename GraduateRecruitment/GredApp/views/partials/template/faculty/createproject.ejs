<section>
	<div class="row">
            <form action="post">
                <!-- left section -->
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h4 class="form-section-title">Project Information</h4>
                    <hr class="custom-hr">

                    <!--CREATE PROGRAM FORM-->
                    <form method="post">
                        <!--title-->
                        <div class="form-group">
                            <label for="title">Project Title</label>
                            <input type="text" class="form-control" id="title" placeholder="Project Title">
                        </div>

                        <!--description-->
                        <div class="form-group">
                            <label for="description">Project Description</label>
                            <textarea class="form-control" id="description" placeholder="Project Description"></textarea>
                        </div>

                        <!--Departments-->
                        <div class="form-group">
                            <label for="description">Select Department</label>
                            <select class="form-control" name="department_id" id="department_id">
                                <option value="0">-select-</option>
                                <option value="science">Science</option>
                                <option value="science">Arts</option>
                                <option value="science">Business</option>
                                <option value="science">Engineering</option>
                            </select>
                        </div>

                        <!--Programs-->
                        <div class="form-group">
                            <label for="description">Select Prorgrams</label>
                            <select class="form-control" name="program_id" id="program_id">
                                <option value="0">-select-</option>
                                <option value="science">Computer Science</option>
                                <option value="science">Computer Engineering</option>
                                <option value="science">Electrical Engineering</option>
                                <option value="science">Earth Science</option>
                            </select>
                        </div>

                </div>

                <!--right section-->
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h4 class="form-section-title">Project Details</h4>
                    <hr class="custom-hr">

                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Is there any financial support?
                        </label>
                    </div>


                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <!--title-->
                            <div class="form-group">
                                <label for="title">Amounts</label>
                                <input type="text" class="form-control" name="amount" id="amount" placeholder="Amount">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <!--title-->
                            <div class="form-group">
                                <label for="title">Number of Postition</label>
                                <input type="text" class="form-control" name="amount" id="position" placeholder="Number of Position">
                            </div>
                        </div>
                    </div>





                    <!--title-->
                    <div class="form-group">
                        <label for="title">Skills</label>
                        <input type="text" class="form-control" name="amount" id="skills" placeholder="Skills">
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <!--title-->
                            <div class="form-group">
                                <label for="title">Start Date</label>
                                <input type="date" class="form-control" name="amount" id="start_date" placeholder="Start Date">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <!--title-->
                            <div class="form-group">
                                <label for="title">End Date</label>
                                <input type="date" class="form-control" name="amount" id="end_date" placeholder="End Date">
                            </div>
                        </div>
                    </div>

                   <!--Research Interest-->
                   <div class="form-group">
                       <label for="description">Research Interest</label>
                       
                       <div class="row">
                       	<div class="col-lg-11">
                       	<select class="form-control" id="select_item" multiple="multiple">
							  <option>AI</option>
							  <option>Machine Learning</option>
							  <option>Database</option>
							  <option>Computer Vision</option>
							  <option>Data Science</option>
							</select>
						</div>
                       	<div class="col-lg-1">
                       		<!-- Button trigger modal -->
                            <a type="button" class="btn btn-info btn-sm btn-left" data-toggle="modal" data-target="#myModal">
                                <i class="fa fa-plus"></i>
                            </a>



                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Add New Research Interest</h4>
                                        </div>
                                        <div class="modal-body">
                                            <!--title-->
					                        <div class="form-group">
					                            <label for="title">Research Interest Title</label>
					                            <input type="text" class="form-control" id="title" placeholder="Project Title">
					                        </div>
					
					                        <!--description-->
					                        <div class="form-group">
					                            <label for="description">Research Interest Description</label>
					                            <textarea class="form-control" id="description" placeholder="Project Description"></textarea>
					                        </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                       	</div>
                       </div>
		                        
                   </div>
                   
                   


                </div>


                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" class="btn btn-success btn-right">Create Project</button>
                </div>

            </form>
        </div>
</section>


